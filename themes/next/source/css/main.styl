// CSS Style Guide: http://codeguide.co/#css



$scheme    = hexo-config('scheme') ? hexo-config('scheme') : 'Muse';
$variables = base $scheme custom;
$mixins    = base $scheme custom;



// Variables Layer
// --------------------------------------------------
for $variable in $variables
  @import "_variables/" + $variable


// Mixins Layer
// --------------------------------------------------
for $mixin in $mixins
  @import "_mixins/" + $mixin;



// Common Layer
// --------------------------------------------------

// Scaffolding
@import "_common/scaffolding";

// Layout
@import "_common/outline";

// Components
@import "_common/components";


// Schemes Layer
// --------------------------------------------------
@import "_schemes/" + $scheme;



// Custom Layer
// --------------------------------------------------
@import "_custom/custom";


// 自定义样式

.page-home {
  .posts-expand {
     .post-block {
      margin-bottom: 20px;
      margin-left: 20%;
    }

    .post-header {
      display: flex !important;
      align-items: center;
      flex-direction: row-reverse;
      text-align: left;
      justify-content: flex-end;
    }

    .post-title {
      margin: 0;
      font-weight: normal;
      font-size: 16px;
    }

    .post-meta {
      margin: 0;
    }

    .post-time {
      font-size: 16px;
      margin-right: 40px;
      line-height: 1;
      &:before {
        content: '';
        position: absolute;
        top: 9px;
        left: 2px;
        width: 6px;
        height: 6px;
        background: #666;
      }
    }

    .post-meta-item-text {
      font-size: 12px;
      color: #d49191;
    }

    .post-eof {
      display: none;
    }
  }
  .pagination {
    margin-top: 40px;
  }
}
