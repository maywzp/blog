#footer
  background: color-footer-background
  padding: 50px 0
  border-top: 1px solid color-border
  color: color-grey
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline

#footer-info
  line-height: line-height
  font-size: 0.85em

.topcontrol
    display: none
    position: fixed
    bottom: 2.5rem
    right: 1.5rem
    width: 2rem
    height: 2rem
    line-height: 30px
    text-align: center
    border-radius: 50%
    border: 1px solid rgba(17, 137, 208, 0.5)
    background: rgba(32, 104, 212, 0.5)
    color: #fff
    z-index: 9999
    cursor: pointer
    user-select: none
